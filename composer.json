{
    "name": "reun/test-utilities",
    "description": "",
    "type": "library",
    "license": "Proprietary",
    "authors": [
        {
            "name": "Reun Media",
            "email": "company@reun.eu"
        }
    ],
    "autoload": {
        "psr-4": {
            "Reun\\TestUtilities\\": "src/Reun/TestUtilities",
            "Reun\\TestUtilities\\Tests\\": "tests/phpunit",
            "ReunLib\\": "src/ReunLib"
        }
    },
    "require-dev": {
        "codeception/specify": "^2.0",
        "doctrine/orm": "^3.2",
        "phpunit/phpunit": "^9.6",
        "psr/http-message": "^1.1",
        "psr/http-server-handler": "^1.0",
        "slim/psr7": "^1.7"
    },
    "require": {
        "php": "^8.3"
    },
    "suggest": {
        "codeception/specify": "For BDD style tests",
        "doctrine/orm": "For testing Doctrine repositories",
        "slim/psr7": "For testing PSR-7 handlers",
        "phpunit/phpunit": "For actual testing code",
        "psr/http-message": "For testing PSR-7 handlers",
        "psr/http-server-handler": "Required for PsrHttp utility"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    }
}
